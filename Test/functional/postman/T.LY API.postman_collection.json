							"request": {
								"method": "GET",
								"header": [
									{
										"key": "Accept",
										"value": "{{Accept}}"
									}
								],
								"url": {
									"raw": "{{host}}/stats?short_url={{encodedCreatedShortLink}}&api_token=xxxxxxxxx",
